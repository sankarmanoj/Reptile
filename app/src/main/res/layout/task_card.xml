<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:padding="16dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:weightSum="100"
            android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:layout_weight="30"
            android:background="@color/reptile_green"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/feedProfileImageView"
                android:src="@drawable/ic_face_black_24dp"
                android:layout_alignParentRight="true"
                 />

            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Large Text"
                android:id="@+id/feedTaskTextView"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/feedNameTextView"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/feedTaskTextView"
                 />

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Hello World"
                    android:id="@+id/feedCommentsTextView"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/feedCommentEntryEditText"
                    android:layout_marginRight="50dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/feedSubmitCommentImageView"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/feedCommentsTextView"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


</LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>